#!/bin/bash
#converts a single raws into a jpg
#or
#converts a directory of raws into a directory of jpgs
set -e

if [ ! -d jpg ]
then
	mkdir jpg
fi

if [ $# -eq 0 ]
then
	#no arguments
	for raw in *.CR2
	do
		darktable-cli $raw -width 1920 jpg/$raw.jpg
	done
else 
	for raw in "$@"
	do
		darktable-cli $raw -width 1920 jpg/$raw.jpg
	done
fi
